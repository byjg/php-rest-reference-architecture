{
  "version": "6.1",
  "name": "byjg/rest-reference-architecture",
  "description": "Production-ready PHP REST API boilerplate that lets you focus on building your business logic, not the infrastructure.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "require": {
    "php": ">=8.3 <8.6",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-curl": "*",
    "byjg/config": "^6.0",
    "byjg/anydataset-db": "^6.0",
    "byjg/micro-orm": "^6.0",
    "byjg/authuser": "^6.0",
    "byjg/mailwrapper": "^6.0",
    "byjg/restserver": "^6.0",
    "zircote/swagger-php": "^4.7|^5.2",
    "byjg/swagger-test": "^6.0",
    "byjg/migration": "^6.0",
    "byjg/scriptify": "^6.0",
    "byjg/shortid": "^6.0",
    "byjg/jinja-php": "^6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5|^11.5",
    "vimeo/psalm": "^5.9|^6.13"
  },
  "autoload": {
    "psr-4": {
      "RestReferenceArchitecture\\": "src/",
      "Builder\\": "builder/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "migrate": "Builder\\Scripts::migrate",
    "codegen": "Builder\\Scripts::codeGenerator",
    "openapi": "Builder\\Scripts::genOpenApiDocs",
    "terminal": "./vendor/bin/scriptify terminal --preload ./templates/scriptify/scriptify.php --env APP_ENV=$APP_ENV",
    "compile": "git pull && composer run openapi && composer run test",
    "up-local-dev": "docker compose -f docker-compose.yml up -d",
    "down-local-dev": "docker compose -f docker-compose.yml down",
    "post-create-project-cmd": "Builder\\PostCreateScript::run",
    "psalm": "vendor/bin/psalm"
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  }
}
